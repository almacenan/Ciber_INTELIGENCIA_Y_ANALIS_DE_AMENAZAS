def send_email(subject, body):
    if not EMAIL_ENABLED: return False
    import smtplib
    from email.mime.text import MIMEText
    msg = MIMEText(body, "plain", "utf-8")
    msg["Subject"] = subject; msg["From"] = EMAIL_USER; msg["To"] = EMAIL_TO
    try:
        s = smtplib.SMTP(EMAIL_HOST, EMAIL_PORT); s.starttls()
        s.login(EMAIL_USER, EMAIL_PASS); s.sendmail(EMAIL_USER, [EMAIL_TO], msg.as_string()); s.quit()
        print(f"[EMAIL] Enviado: {subject}"); return True
    except Exception as e:
        print(f"[EMAIL] Error: {e}"); return False

def send_sms(text):
    if not SMS_ENABLED: return False
    try:
        from twilio.rest import Client
    except ImportError:
        subprocess.check_call([sys.executable, "-m", "pip", "install", "twilio"])
        from twilio.rest import Client
    try:
        sid = Client(TWILIO_SID, TWILIO_TOKEN).messages.create(body=text, from_=TWILIO_FROM, to=TWILIO_TO).sid
        print(f"[SMS] Enviado id={sid}"); return True
    except Exception as e:
        print(f"[SMS] Error: {e}"); return False

def send_email_to(to_addr, subject, body):
    """Envía email usando las credenciales SMTP ya configuradas, pero a 'to_addr'."""
    if not EMAIL_ENABLED:
        print("[EMAIL->SMS] Email deshabilitado.")
        return False
    import smtplib
    from email.mime.text import MIMEText
    msg = MIMEText(body, "plain", "utf-8")
    msg["Subject"] = subject
    msg["From"] = EMAIL_USER
    msg["To"]   = to_addr
    try:
        server = smtplib.SMTP(EMAIL_HOST, EMAIL_PORT)
        server.starttls()
        server.login(EMAIL_USER, EMAIL_PASS)
        server.sendmail(EMAIL_USER, [to_addr], msg.as_string())
        server.quit()
        print(f"[EMAIL->SMS] Enviado a {to_addr}: {subject}")
        return True
    except Exception as e:
        print(f"[EMAIL->SMS] Error: {e}")
        return False



def led_off_safe():
    # Asegura LED apagado siempre
    for _ in range(3):
        try:
            requests.get(LED_URL, params={"on": LED_OFF_VAL}, timeout=0.25); break
        except: time.sleep(0.05)

def set_led(state:int):
    # Respeta LED_ENABLE (si está False, siempre apagado)
    if not LED_ENABLE:
        led_off_safe(); return
    try:
        requests.get(LED_URL, params={"on": (LED_ON_VAL if state else LED_OFF_VAL)}, timeout=0.25)
    except: pass

# Apaga LED al inicio y al salir
led_off_safe()
def _shutdown(*_): led_off_safe()
atexit.register(_shutdown)
for name in ("SIGINT","SIGTERM","SIGBREAK"):
    sig = getattr(signal, name, None)
    if sig is not None:
        try: signal.signal(sig, _shutdown)
        except Exception: pass

# =========================
# LOOP INLINE (2 paneles)
# =========================
cap = cv2.VideoCapture(ESP_URL)
if not cap.isOpened():
    raise RuntimeError(f"No se pudo abrir: {ESP_URL}")

print("Mostrando dos paneles inline (izq: vista | der: detección). Detén con el ■ del notebook.")

last_email_time = datetime.min
last_sms_time   = datetime.min
total_orange_events = 0
total_red_events    = 0
prev_has_orange = False
prev_has_red    = False
# Contadores de envío (para no duplicar)
orange_batches_sent = 0   # cuántos bloques de 5 ya se notificaron
reds_sent           = 0   # cuántas rojas únicas ya se notificaron

try:
    while True:
        ok, frame = cap.read()
        if not ok:
            time.sleep(0.02); continue

        h, w = frame.shape[:2]
        total_px = h * w

        hsv = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)

        # Máscaras y limpieza
        mask_orange = cv2.inRange(hsv, ORANGE_LOWER, ORANGE_UPPER)
        mask_red    = cv2.bitwise_or(
            cv2.inRange(hsv, RED1_LOWER, RED1_UPPER),
            cv2.inRange(hsv, RED2_LOWER, RED2_UPPER)
        )
        mask_orange = cv2.morphologyEx(mask_orange, cv2.MORPH_OPEN,  kernel, 1)
        mask_orange = cv2.morphologyEx(mask_orange, cv2.MORPH_CLOSE, kernel, 1)
        mask_red    = cv2.morphologyEx(mask_red,    cv2.MORPH_OPEN,  kernel, 1)
        mask_red    = cv2.morphologyEx(mask_red,    cv2.MORPH_CLOSE, kernel, 1)


        # Área en píxeles
        orange_px = cv2.countNonZero(mask_orange)
        red_px    = cv2.countNonZero(mask_red)

        # Umbrales absolutos (pct → px)
        ORANGE_PX_THR = max(20, int((ORANGE_AREA_PCT/100.0) * total_px))
        RED_PX_THR    = max(10, int((RED_AREA_PCT/100.0)    * total_px))

        has_orange = orange_px >= ORANGE_PX_THR
        has_red    = red_px    >= RED_PX_THR

        # Contadores acumulados por apariciones (borde ascendente)
        if has_orange and not prev_has_orange: total_orange_events += 1
        if has_red    and not prev_has_red:    total_red_events    += 1
        prev_has_orange = has_orange; prev_has_red = has_red

        # LED (apagado por defecto)
        set_led(1 if (has_orange or has_red) else 0)

        # (Opcional) notificaciones con cooldown (desactivadas por defecto)
        now = datetime.now()
        #if EMAIL_ENABLED and has_orange and (now - last_email_time).total_seconds() > EMAIL_COOLDOWN_SEC:
            #if send_email("[ALERTA] Naranja detectado",
                          #f"Naranja px={orange_px} thr={ORANGE_PX_THR} {now.strftime('%Y-%m-%d %H:%M:%S')}\n"
                          #f"Rojo(total): {total_red_events} | Naranja(total): {total_orange_events}"):
                #last_email_time = now

                # === Notificaciones por reglas del profe ===
        # Regla 1: cada 5 NARANJAS -> 1 correo
        if EMAIL_ENABLED:
            current_batches = total_orange_events // 5
            if current_batches > orange_batches_sent and total_orange_events >= 5:
                subject = f"Cesar Eduardo Lanos Camacho, Ing Sistemas...[ALERTA] Naranjas x{total_orange_events} (envío cada 5)"
                body = (
                    f"Se alcanzaron {total_orange_events} apariciones de NARANJA.\n"
                    f"Bloques notificados: {current_batches} (cada bloque = 5 apariciones).\n"
                    f"Rojo(total): {total_red_events} | Naranja(total): {total_orange_events}"
                    f"Este envio se hace presentando el proyecto final de la materiaCiber Inteligencia en sistemas Ciber Fisicos"
                )
                send_email(subject, body)
                orange_batches_sent = current_batches
            if SMS_ENABLED:
                subject = f"Cesar Eduardo Lanos Camacho, Ing Sistemas...[ALERTA] Naranjas x{total_orange_events} (envío cada 5)"
                body = (
                    f"Se alcanzaron {total_orange_events} apariciones de NARANJA.\n"
                    f"Bloques notificados: {current_batches} (cada bloque = 5 apariciones).\n"
                    f"Rojo(total): {total_red_events} | Naranja(total): {total_orange_events}"
                    f"Este envio se hace presentando el proyecto final de la materiaCiber Inteligencia en sistemas Ciber Fisicos"
                )
                send_email_to(SMS_EMAIL_TO, subject, body)
                #send_sms(f"NARANJA: {total_orange_events} (bloque {current_batches}) | "
                         #f"R:{total_red_events} N:{total_orange_events}")
            orange_batches_sent = current_batches

        # Regla 2: cada 1 ROJA -> 1 correo
        if EMAIL_ENABLED:
            if total_red_events > reds_sent:  # borde ascendente ya contado arriba
                subject = f"Cesar Eduardo Lanos Camacho, Ing Sistemas.. [ALERTA] Roja detectada (#{total_red_events})"
                body = (
                    f"Se detectó una caja ROJA (evento #{total_red_events}).\n"
                    f"Rojo(total): {total_red_events} | Naranja(total): {total_orange_events}"
                    f"Este envio se hace presentando el proyecto final de la materiaCiber Inteligencia en sistemas Ciber Fisicos"
                    f"Ingeniero de Sistemas , estudiante de maestria MAAC"

                )
                send_email(subject, body)
                reds_sent = total_red_events

            if SMS_ENABLED:
                #send_sms(f"ROJO #{total_red_events} | R:{total_red_events} N:{total_orange_events}")
                 send_email_to(SMS_EMAIL_TO, subject, body)
            reds_sent = total_red_events


        #if SMS_ENABLED and has_red and (now - last_sms_time).total_seconds() > SMS_COOLDOWN_SEC:
            #if send_sms(f"ROJO px={red_px} thr={RED_PX_THR} {now.strftime('%H:%M:%S')} | "
                        #f"R:{total_red_events} N:{total_orange_events}"):
                #last_sms_time = now

        # ==== Panel IZQUIERDO: vista con banner ====
        view = frame.copy()
        cv2.putText(view, f"rojo {total_red_events}", (10, 30),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.9, (0,0,255), 2)
        cv2.putText(view, f"naranja {total_orange_events}", (10, 60),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.9, (0,165,255), 2)

        # Dibuja contornos “visuales” desde la máscara (no exige rectángulo perfecto)
        for color_mask, bgr in ((mask_orange, (0,165,255)), (mask_red, (0,0,255))):
            cnts,_ = cv2.findContours(color_mask, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
            for c in cnts:
                if cv2.contourArea(c) < 200:  # ignora manchas minúsculas
                    continue
                x,y,w_,h_ = cv2.boundingRect(c)
                cv2.rectangle(view, (x,y), (x+w_, y+h_), bgr, 2)

        # ==== Panel DERECHO: solo detección (color sobre negro) ====
        mask_merged = cv2.bitwise_or(mask_orange, mask_red)
        det_only = cv2.bitwise_and(frame, frame, mask=mask_merged)

        # Unimos paneles horizontalmente y mostramos inline
        panel = np.hstack([view, det_only])
        panel = cv2.cvtColor(panel, cv2.COLOR_BGR2RGB)
        clear_output(wait=True)
        display(Image.fromarray(panel))

