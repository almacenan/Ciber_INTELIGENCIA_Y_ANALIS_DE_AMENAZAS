# === ESP32-CAM: Detección de AZUL + Control del LED desde Jupyter ===
# Requisitos: el firmware de la ESP32-CAM debe exponer:
#   - Stream: http://<IP>:81/stream
#   - LED:    http://<IP>:81/led?on=0/1
# (Es el sketch que te pasé con /stream y /led)

# 1) Dependencias
import sys, subprocess
try:
    import requests
except ImportError:
    subprocess.check_call([sys.executable, "-m", "pip", "install", "requests"])
    import requests

import cv2, numpy as np, time
from IPython.display import display, clear_output
from PIL import Image

# 2) Configura el host de tu cámara (IP o mDNS)
ESP_HOST = "esp32cam.local"   # <-- puedes poner la IP fija aquí, ej. "10.133.163.111"
ESP_URL  = f"http://10.133.163.111:81/stream"
LED_URL  = f"http://10.133.163.111:81/led"

# 3) Opcional: asegura LED apagado al inicio
try:
    requests.get(LED_URL, params={"on": 0}, timeout=0.3)
except Exception:
    pass

# 4) Abre el stream
cap = cv2.VideoCapture(ESP_URL)
if not cap.isOpened():
    raise RuntimeError(f"No se pudo abrir el stream: {ESP_URL}\n"
                       f"Prueba en el navegador y verifica IP/red."	)

print("ESP32-CAM conectada. Detección de AZUL + LED. Detén con el botón ■.")

# 5) Parámetros de detección (ajustables según luz)
LOWER_BLUE = np.array([100, 120, 50], dtype=np.uint8)   # más permisivo: [95, 80, 40]
UPPER_BLUE = np.array([130, 255, 255], dtype=np.uint8)
kernel      = np.ones((5,5), np.uint8)
MIN_AREA    = 1200     # área mínima para activar LED
COOLDOWN    = 0.3      # seg mínimos entre cambios de LED (anti-parpadeo)
led_state   = 0
last_change = 0.0

def set_led(state: int):
    """Enciende (1) / apaga (0) el LED del flash vía HTTP con antirrebote."""
    global led_state, last_change
    t = time.time()
    if state != led_state and (t - last_change) > COOLDOWN:
        try:
            requests.get(LED_URL, params={"on": int(state)}, timeout=0.25)
            led_state, last_change = state, t
        except Exception:
            # No frenamos el video si falla la petición
            pass

# 6) Bucle principal (detén con ■)
try:
    while True:
        ok, frame = cap.read()
        if not ok:
            print("Frame perdido del ESP32."); break

        hsv  = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)
        mask = cv2.inRange(hsv, LOWER_BLUE, UPPER_BLUE)
        mask = cv2.morphologyEx(mask, cv2.MORPH_OPEN,  kernel, iterations=1)
        mask = cv2.morphologyEx(mask, cv2.MORPH_DILATE, kernel, iterations=1)

        # Contornos y visualización
        cnts, _ = cv2.findContours(mask, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
        out = frame.copy()
        max_area = 0
        for c in cnts:
            area = cv2.contourArea(c)
            if area < MIN_AREA:
                continue
            max_area = max(max_area, area)
            x, y, w, h = cv2.boundingRect(c)
            cv2.rectangle(out, (x, y), (x+w, y+h), (0, 255, 0), 2)
            cv2.putText(out, "AZUL", (x, y-6), cv2.FONT_HERSHEY_SIMPLEX, 0.6, (0,255,0), 2)
            #set_led(1)
                
        # LED: ON si hay azul suficiente; OFF si no
        #set_led(1 if max_area >= MIN_AREA else 0)
        #set_led(1)
        has_blue = cv2.countNonZero(mask) > 0
        set_led(1 if has_blue else 0)
        vis = np.hstack([out, cv2.bitwise_and(frame, frame, mask=mask)])
        vis = cv2.cvtColor(vis, cv2.COLOR_BGR2RGB)
        clear_output(wait=True); display(Image.fromarray(vis))

except KeyboardInterrupt:
    pass
finally:
    # Apaga LED y libera recursos al salir
    try:
        requests.get(LED_URL, params={"on": 0}, timeout=0.25)
    except Exception:
        pass
    cap.release()
    cv2.destroyAllWindows()
    print("Listo, recursos liberados.")

