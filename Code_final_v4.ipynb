# === ESP32-CAM: azul -> LED + CONTADOR de detecciones por evento ===, cuenta pero lento....
import sys, subprocess, time
try:
    import requests
except ImportError:
    subprocess.check_call([sys.executable, "-m", "pip", "install", "requests"])
    import requests

import cv2, numpy as np
from IPython.display import display, clear_output
from PIL import Image

ESP_HOST = "esp32cam.local"   # o tu IP
ESP_URL  = "http://10.149.137.111:81/stream"
LED_URL  = "http://10.149.137.111:81/led"   # <- corregido el 'http://http://'

# si tu LED enciende con on=0, pon False:
LED_ACTIVE_HIGH = True
LED_ON_VAL, LED_OFF_VAL = (1,0) if LED_ACTIVE_HIGH else (0,1)

# apaga por si acaso
try: requests.get(LED_URL, params={"on": LED_OFF_VAL}, timeout=0.3)
except: pass

cap = cv2.VideoCapture(ESP_URL)
if not cap.isOpened():
    raise RuntimeError(f"No se pudo abrir el stream: {ESP_URL}")

print("Detección de AZUL + LED + CONTADOR (eventos). Detén con ■.")

# Rangos AZUL (ajusta si hace falta)
LOWER_BLUE = np.array([100,120,50], dtype=np.uint8)   # más permisivo: [95,80,40]
UPPER_BLUE = np.array([130,255,255], dtype=np.uint8)
kernel = np.ones((3,3), np.uint8)   # kernel pequeño

# --- Contador por eventos (no por frame) ---
conteo = 0
azul_en_evento = False          # True mientras el azul está presente de forma continua
no_azul_frames = 0
NO_AZUL_UMBRAL = 2              # cuántos frames sin azul para “soltar” el evento

# Anti-rebote temporal para evitar dobles conteos muy rápidos
COOLDOWN_EVENT = 0.3            # segundos entre eventos contables
t_ultimo_evento = 0.0

# Anti-rebote del LED (ya lo tenías)
COOLDOWN_LED = 0.2
led_state = 0
t_led = 0.0

def set_led(state:int):
    global led_state, t_led
    t = time.time()
    if state != led_state and (t - t_led) > COOLDOWN_LED:
        try:
            requests.get(LED_URL, params={"on": (LED_ON_VAL if state else LED_OFF_VAL)}, timeout=0.25)
            led_state, t_led = state, t
        except:
            pass

try:
    while True:
        ok, frame = cap.read()
        if not ok:
            print("Frame perdido."); break

        hsv  = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)
        mask = cv2.inRange(hsv, LOWER_BLUE, UPPER_BLUE)
        mask = cv2.morphologyEx(mask, cv2.MORPH_OPEN, kernel, iterations=1)

        has_blue = cv2.countNonZero(mask) > 0

        # ===== LÓGICA DE EVENTO (flanco de subida) =====
        if has_blue:
            # enciende LED si quieres
            # set_led(1)
            no_azul_frames = 0
            # flanco: si antes NO había evento y pasó cooldown -> contar +1
            if not azul_en_evento and (time.time() - t_ultimo_evento) > COOLDOWN_EVENT:
                conteo += 1
                t_ultimo_evento = time.time()
                azul_en_evento = True
                print(f"[+] Detección #{conteo}")
        else:
            # set_led(0)
            no_azul_frames += 1
            if no_azul_frames >= NO_AZUL_UMBRAL:
                azul_en_evento = False

        # ===== Visualización =====
        out = frame.copy()
        # etiqueta de estado
        cv2.putText(out, f"Azul: {'SI' if has_blue else 'NO'}", (10,25),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.7, (0,255,0) if has_blue else (0,0,255), 2)
        # contador grande
        cv2.putText(out, f"Conteo: {conteo}", (10,60),
                    cv2.FONT_HERSHEY_SIMPLEX, 0.9, (255,255,0), 2)

        vis_mask = cv2.bitwise_and(frame, frame, mask=mask)
        vis = np.hstack([out, vis_mask])
        vis = cv2.cvtColor(vis, cv2.COLOR_BGR2RGB)
        clear_output(wait=True); display(Image.fromarray(vis))

except KeyboardInterrupt:
    pass
finally:
    try: requests.get(LED_URL, params={"on": LED_OFF_VAL}, timeout=0.25)
    except: pass
    cap.release(); cv2.destroyAllWindows(); print("Listo.")